/*
This pipeline automates dependency updates and builds for a specified project and branch.

Stages:
  1. Checkout: clones the project from GitHub using secure credentials.
  2. Update dependencies: updates Maven parent and properties based on external version rules.
  3. Commit updates: commits any dependency updates if found.
  4. Build new version: builds and deploys the project if changes were committed or forced.
  5. Push update to git: pushes committed changes back to the repository.
  6. Nothing to update: logs if no dependency changes were detected and no release is triggered.

Post:
  - Cleans workspace after every run.
*/

pipeline {
   	agent any
   	environment {
        CHECKED_IN = "";
    }

    parameters {
        string( name: 'UB_PROJECT_NAME', 
            defaultValue: 'cora-testrelease', 
            description: 'Name of the project to build')
        string( name: 'UB_BRANCH_NAME', 
            defaultValue: 'master', 
            description: 'Name of the branch to build')
    }
    tools {
        jdk 'Cora OpenJDK'
        maven 'Maven latest'
    }
    stages {
        stage("checkout"){
            steps{
            	echo "Project: ${UB_PROJECT_NAME}"
                withCredentials([string(credentialsId: '9af4f5c5-4a09-4bbe-9436-2c102765d85b', variable: 'TOKEN'),string(credentialsId: '04bc33f5-abdd-4486-b43b-a5900f6fc080', variable: 'USERNAME')]) {
                    sh 'git clone https://$TOKEN@github.com/lsu-ub-uu/$UB_PROJECT_NAME.git $UB_PROJECT_NAME -b $UB_BRANCH_NAME'
                }
            }
        }
        stage("update dependencies"){
            steps {
            	sh 'mvn -f $UB_PROJECT_NAME versions:update-parent versions:update-properties -DgenerateBackupPoms=false -Dmaven.version.rules="https://epc.ub.uu.se/jenkins/view/ContinousDelivery/job/cora-jenkins/ws/maven/maven-version-rules.xml"'
            }
        }
        stage("commit updates"){
            steps {
            	dir ("$UB_PROJECT_NAME") {
	                sh 'git config user.email "jenkins@ub"'
	                sh 'git config user.name "Jenkins CI"'
	                script {
	                    CHECKED_IN = sh (script: 'git commit -am="Commit form jenkins"', returnStatus: true, returnStdout: true)
	                }
                }
            }
        }
        stage("build new version"){
            when {
                expression { CHECKED_IN == 0 || FORCE_RELEASE == "1"}
            }
            steps {
            	sh 'mvn -f $UB_PROJECT_NAME -P sonar-cora clean deploy'
            }
        }
        stage("push update to git"){
            when {
                expression { CHECKED_IN == 0 }
            }
            steps {
            	dir ("$UB_PROJECT_NAME") {
	                sh 'git push'
	            }
            }
        }
        stage("nothing to update"){
            when {
                expression { CHECKED_IN == 1 && FORCE_RELEASE == "0"}
            }
            steps {
                echo "No dependencies to update, no release created"
            }
        }
        
    }
    post {
        always {
            cleanWs()
        }
    }
}